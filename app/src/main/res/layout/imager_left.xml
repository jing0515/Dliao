<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iamger_left"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/space_center_dynamic_bg"
        android:layout_marginTop="47dp"
        android:layout_alignTop="@+id/iamger_left_text"
        android:layout_toLeftOf="@+id/iamger_left_text"
        android:layout_toStartOf="@+id/iamger_left_text" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iamger_left_text"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        fresco:placeholderImage="@drawable/qinglu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
